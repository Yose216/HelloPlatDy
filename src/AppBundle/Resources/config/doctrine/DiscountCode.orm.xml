<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\DiscountCode" table="Discount_code">
    <indexes>
      <index name="fk_Discount_code_Restaurant1_idx" columns="id_restaurant"/>
    </indexes>
    <id name="idDiscountCode" type="integer" column="id_discount_code"/>
    <id name="idRestaurant" association-key="true"/>
    <field name="discountCode" type="string" column="discount_code" length="50" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="discountCodeOffer" type="string" column="discount_code_offer" length="100" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="discountCodeDescription" type="text" column="discount_code_description" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="discountCodeStart" type="datetime" column="discount_code_start" nullable="true"/>
    <field name="discountCodeFinish" type="datetime" column="discount_code_finish" nullable="true"/>
    <one-to-one field="idRestaurant" target-entity="Restaurant" fetch="LAZY">
      <join-columns>
        <join-column name="id_restaurant" referenced-column-name="id_restaurant"/>
      </join-columns>
    </one-to-one>
    <many-to-many field="idUser" target-entity="User" inversed-by="idDiscountCode" fetch="LAZY">
      <join-table name="discount_code_has_user">
        <join-columns>
          <join-column name="id_discount_code" referenced-column-name="id_discount_code"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_user" referenced-column-name="id_user"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
