{% extends 'base.html.twig' %}

{% block body %}
    <h1>Discountcode</h1>

    <table>
        <tbody>
            <tr>
                <th>Discountcode</th>
                <td>{{ discountCode.discountCode }}</td>
            </tr>
            <tr>
                <th>Discountcodeoffer</th>
                <td>{{ discountCode.discountCodeOffer }}</td>
            </tr>
            <tr>
                <th>Discountcodedescription</th>
                <td>{{ discountCode.discountCodeDescription }}</td>
            </tr>
            <tr>
                <th>Discountcodestart</th>
                <td>{% if discountCode.discountCodeStart %}{{ discountCode.discountCodeStart|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Discountcodefinish</th>
                <td>{% if discountCode.discountCodeFinish %}{{ discountCode.discountCodeFinish|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Iddiscountcode</th>
                <td>{{ discountCode.idDiscountCode }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('discountcode_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('discountcode_edit', { 'idDiscountCode': discountCode.idDiscountCode }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
